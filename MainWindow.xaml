<Window
	x:Class="SVGViewer.MainWindow"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:svgc="https://github.com/dotnetprojects/SVGImage"
	mc:Ignorable="d"
	Title="SVG Viewer"
	Height="450"
	Width="800"
	WindowStartupLocation="CenterScreen">
	<Window.Background>
		<VisualBrush
			TileMode="Tile"
			ViewportUnits="Absolute"
			Viewport="0,0,256,256">
			<VisualBrush.Visual>
				<Image
					Source="Resources/transgrid.jpg"
					Stretch="Uniform" />
			</VisualBrush.Visual>
		</VisualBrush>
	</Window.Background>
	<Grid>
		<Grid
			Margin="10"
			>
			<Grid.ColumnDefinitions>
				<ColumnDefinition
					Width="*" />
				<ColumnDefinition
					Width="Auto" />
				<ColumnDefinition
					Width="0.4*" />
			</Grid.ColumnDefinitions>

			<GridSplitter 
				Grid.Column="1"
				Grid.Row="1"
				HorizontalAlignment="Center"
				VerticalAlignment="Stretch"
				Background="#FFC9CBDB"
				Width="5"
				/>

			<!--preview-->
			<Grid
				Grid.Column="2"
				Margin="10,0,0,0"
				>
				<Border
					Background="White"
					Margin="0,0,0,0"
					>
					<svgc:SVGImage
						Margin="10,30,10,0"
						x:Name="svgCanv"
						SizeType="ContentToSizeNoStretch"
						Background="Transparent" 
						/>
				</Border>

				<TextBlock
					Text="Preview" 
					Margin="10,10,0,0"
					/>
			</Grid>

			<!--nav-->
			<Grid
				Grid.Column="0"
				>
				<Grid.RowDefinitions>
					<RowDefinition
						Height="Auto" />
					<RowDefinition
						Height="*" />
				</Grid.RowDefinitions>

				<Grid
					>
					<Grid.ColumnDefinitions>
						<ColumnDefinition
							Width="auto" />
						<ColumnDefinition
							Width="*" />
					</Grid.ColumnDefinitions>
					
					<TextBlock
						Text="Search" />
					<TextBox 
						Grid.Column="1"
						Margin="10,0,10,0"
						HorizontalAlignment="Stretch"
						x:Name="txtSearch" 
						TextChanged="txtSearch_TextChanged"
						/>
				</Grid>

				<ListView
					Grid.Row="1"
					BorderThickness="0"
					ItemsSource="{Binding Files}"
					Background="Transparent"
					x:Name="lvFiles"
					Margin="0,20,20,0"
					ScrollViewer.HorizontalScrollBarVisibility="Disabled">
					<ListView.ItemsPanel>
						<ItemsPanelTemplate>
							<WrapPanel />
						</ItemsPanelTemplate>
					</ListView.ItemsPanel>

					<ListView.ItemTemplate>
						<DataTemplate>
							<Grid
								Margin="5"
								Width="100"
								Height="100">
								<StackPanel>
									<svgc:SVGImage
										x:Name="svgCanv"
										SizeType="ContentToSizeNoStretch"
										Background="Transparent"
										Padding="10"
										Height="64"
										Width="64"
										ImageSource="{Binding SVGImage}" />
									<Grid
										Background="White">
										<TextBlock
											Text="{Binding Filename}"
											TextWrapping="Wrap"
											HorizontalAlignment="Center"
											Margin="5,5" />
									</Grid>
								</StackPanel>
							</Grid>
						</DataTemplate>
					</ListView.ItemTemplate>
				</ListView>

				<StackPanel
					Grid.Row="1"
					x:Name="progressMessage"
					VerticalAlignment="Center"
					>
					<TextBlock
						Text="Drag SVG files here"
						VerticalAlignment="Center"
						HorizontalAlignment="Center"
						FontSize="20"
						x:Name="lblDragFileHere" />
					
					<ProgressBar
						Grid.Row="1"
						VerticalAlignment="Center" 
						Height="20"
						Margin="0,0,10,0"
						x:Name="progressBar"
						IsIndeterminate="False"
						/>
				</StackPanel>
			</Grid>
		</Grid>
	</Grid>
</Window>